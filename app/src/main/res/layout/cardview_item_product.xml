<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_item_product_id"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/product_img_id"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#f9f9f9"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:text="Product Title"
                android:textColor="#2d2d2d"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:text="Price"
                android:textColor="#2d2d2d"
                android:textSize="13sp"
                android:textStyle="italic" />
        </LinearLayout>


        <Button
            android:id="@+id/product_minus_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/minus"
            android:clickable="true"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/product_quantity_id"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="Quantity"
            android:textColor="#2d2d2d"
            android:textSize="16sp" />

        <Button
            android:id="@+id/product_plus_id"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/plus"
            android:clickable="true"
            android:elevation="0dp"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>
</android.support.v7.widget.CardView>