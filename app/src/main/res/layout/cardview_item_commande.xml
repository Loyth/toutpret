<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderpicker_numeroCommande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Commande n°X"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/orderpicker_nbArticles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Nombre d'articles : 7"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/orderpicker_dateCommande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Commandé le "
                android:textSize="13dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/orderpicker_nom_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="15dp"
                android:text="Client : Thomas Loyau"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/orderpicker_tel_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:text="Tél : 0213234356"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/orderpicker_button_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Détails"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#80DEEA"/>

            <Button
                android:id="@+id/orderpicker_button_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:backgroundTint="#80CBC4"
                android:text="Status" />
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>